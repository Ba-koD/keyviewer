{
  "$schema": "https://schema.tauri.app/config/2",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "alwaysOnTop": false,
        "center": true,
        "decorations": true,
        "fullscreen": false,
        "height": 640,
        "minHeight": 540,
        "minWidth": 420,
        "resizable": true,
        "skipTaskbar": false,
        "title": "KeyQueueViewer",
        "transparent": false,
        "visible": true,
        "width": 520
      }
    ],
    "withGlobalTauri": true
  },
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "../ui"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright (c) 2025 KeyViewer Team",
    "externalBin": [],
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "longDescription": "A cross-platform key input monitoring tool with web interface for OBS and streaming.",
    "resources": [
      "../ui/*"
    ],
    "shortDescription": "Key Input Monitoring Tool",
    "targets": [
      "msi",
      "nsis",
      "app",
      "dmg",
      "deb",
      "appimage"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  },
  "identifier": "com.keyviewer",
  "productName": "KeyQueueViewer",
  "version": "1.1.0"
}
